<body>

  <div id="motion-indicator">‚ö†Ô∏è Motion Detected</div>
  <video id="video" autoplay muted playsinline></video>

  <div class="controls">
    <button onclick="startRecording()">Start</button>
    <button onclick="stopRecording()">Stop</button>
    <button onclick="downloadRecording()">Download</button>
    <button onclick="saveToStorage()">Save</button>
    <button onclick="toggleNightMode()">Night Mode</button>
  </div>

  <div id="info">
    <div>Speed: <span id="speed">0</span> km/h</div>
    <div>Distance: <span id="distance">0</span> km</div>
    <div>Duration: <span id="time">00:00</span></div>
  </div>

  <div id="saved-list">
    <strong>Saved Videos:</strong>
    <div id="videos"></div>
  </div>

  <canvas id="motionCanvas" style="display:none;"></canvas>

  <script>
    const video = document.getElementById('video');
    const motionCanvas = document.getElementById('motionCanvas');
    const motionCtx = motionCanvas.getContext('2d');
    const motionIndicator = document.getElementById('motion-indicator');
    const speedEl = document.getElementById('speed');
    const distanceEl = document.getElementById('distance');
    const timeEl = document.getElementById('time');
    const videosList = document.getElementById('videos');

    let stream, mediaRecorder, chunks = [];
    let watchId, startTime, timerInterval;
    let lastCoords = null, totalDistance = 0;
    let recordingBlob = null, lastFrame = null;

    async function initCamera() {
      try {
        stream = await navigator.mediaDevices.getUserMedia({
          video: { facingMode: { ideal: "environment" } }, audio: true
        });
        video.srcObject = stream;
        detectMotion();
        loadSavedVideos();
      } catch (err) {
        alert("Camera or microphone access denied.");
        console.error(err);
      }
    }

    function startRecording() {
      chunks = [];
      mediaRecorder = new MediaRecorder(stream);
      mediaRecorder.ondataavailable = e => chunks.push(e.data);
      mediaRecorder.onstop = () => recordingBlob = new Blob(chunks, { type: 'video/webm' });
      mediaRecorder.start();
      startTime = Date.now();
      startTimer();
      watchLocation();
    }

    function stopRecording() {
      if (mediaRecorder && mediaRecorder.state === "recording") {
        mediaRecorder.stop();
        clearInterval(timerInterval);
        if (watchId) navigator.geolocation.clearWatch(watchId);
      }
    }

    function downloadRecording() {
      if (!recordingBlob) return alert("No recording to download.");
      const url = URL.createObjectURL(recordingBlob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'dashcam_' + Date.now() + '.webm';
      a.click();
    }

    function saveToStorage() {
      if (!recordingBlob) return alert("Nothing to save.");
      const id = 'dashcam_' + Date.now();
      const reader = new FileReader();
      reader.onload = function () {
        localStorage.setItem(id, reader.result);
        loadSavedVideos();
      };
      reader.readAsDataURL(recordingBlob);
    }

    function loadSavedVideos() {
      videosList.innerHTML = '';
      for (let i = 0; i < localStorage.length; i++) {
        const key = localStorage.key(i);
        if (key.startsWith('dashcam_')) {
          const url = localStorage.getItem(key);
          const a = document.createElement('a');
          a.href = url;
          a.download = key + '.webm';
          a.innerText = 'üìº ' + key;
          videosList.appendChild(a);
        }
      }
    }

    function toggleNightMode() {
      document.body.classList.toggle("night");
    }

    function startTimer() {
      timeEl.textContent = "00:00";
      timerInterval = setInterval(() => {
        const diff = Math.floor((Date.now() - startTime) / 1000);
        const mins = String(Math.floor(diff / 60)).padStart(2, '0');
        const secs = String(diff % 60).padStart(2, '0');
        timeEl.textContent = `${mins}:${secs}`;
      }, 1000);
    }

    function watchLocation() {
      if (!navigator.geolocation) return;
      watchId = navigator.geolocation.watchPosition(pos => {
        const { latitude, longitude, speed } = pos.coords;
        if (lastCoords) {
          const d = haversine(lastCoords.lat, lastCoords.lon, latitude, longitude);
          totalDistance += d;
        }
        lastCoords = { lat: latitude, lon: longitude };
        speedEl.textContent = ((speed || 0) * 3.6).toFixed(1);
        distanceEl.textContent = totalDistance.toFixed(2);
      }, err => console.warn("GPS error:", err), { enableHighAccuracy: true });
    }

    function haversine(lat1, lon1, lat2, lon2) {
      const R = 6371;
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a = Math.sin(dLat/2)**2 + Math.cos(lat1*Math.PI/180) * Math.cos(lat2*Math.PI/180) * Math.sin(dLon/2)**2;
      return R * 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
    }

    function detectMotion() {
      setInterval(() => {
        if (!video.videoWidth || !video.videoHeight) return;
        motionCanvas.width = video.videoWidth;
        motionCanvas.height = video.videoHeight;
        motionCtx.drawImage(video, 0, 0, motionCanvas.width, motionCanvas.height);
        const frame = motionCtx.getImageData(0, 0, motionCanvas.width, motionCanvas.height);
        if (lastFrame) {
          let changed = 0;
          for (let i = 0; i < frame.data.length; i += 4) {
            if (Math.abs(frame.data[i] - lastFrame.data[i]) > 20) changed++;
          }
          if (changed > 10000) {
            motionIndicator.style.display = 'block';
            setTimeout(() => motionIndicator.style.display = 'none', 1000);
          }
        }
        lastFrame = frame;
      }, 700);
    }

    window.onload = initCamera;
  </script>
</body>
</html>
